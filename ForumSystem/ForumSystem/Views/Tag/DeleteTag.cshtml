@model ForumSystem.DataAccess.Models.Tag

<h2>Delete Tag</h2>

<div>
    <h3>Tag Name: @Model.Name</h3>
</div>

<form asp-controller="Tag" asp-action="DeleteTagConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <p>Are you sure you want to delete this tag?</p>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Post" asp-action="PostDetails" asp-route-id="@ViewData["PostId"]" class="btn btn-secondary">Cancel</a>
    <input type="hidden" name="postId" value="@ViewData["PostId"]" />
</form>

