@model ForumSystemDTO.ViewModels.PostViewModels.EditPostViewModel;

<div class="basic-form big-basic-form">
	<div id="basic-form-title">Edit post</div>
	<form class="edit-post-form" asp-controller="Post" asp-action="Edit" method="post">
		<div class="validation-error-message">
			@if (this.ViewData["ErrorMessage"] is not null)
			{
				<p>@this.ViewData["ErrorMessage"]</p>
			}
		</div>

		<div class="input-container big-input-container">
			<textarea asp-for="Content" class="basic-form-input" type="text" placeholder=" "> </textarea>
			<span asp-validation-for="Content" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="Content" class="placeholder">Content</label>
		</div>

		<form asp-controller="Post" asp-action="Edit" method="post">
			<button type="submit" class="basic-form-submit">Submit</button>
		</form>
	</form>
</div>