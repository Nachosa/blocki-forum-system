@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ForumSystem.Web.ViewModels.UserViewModels.RegisterUser

<!DOCTYPE html>
<html lang="en">

<head>
    <link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
    <meta charset="utf-8">
    <title>BlockieTalkie</title>
</head>

<body>
    <section>
        <nav>
            <ul class="menuItems">
                <li>
                    <a href="/Home/Index">
                        <div class="imageBox">
                            <div>
                                <img alt="/Home/Index" src="~/images/cubehome.png" class="cubeImage">
                            </div>
                            <div id="hoverImg">
                                <img alt="/Home/Index" src="~/images/cubepink.png" class="cubeImage">
                            </div>
                        </div>
                    </a>
                </li>
                <li><a href="/Home/About" data-item='About'>About</a></li>
                <li><a style="margin-right:10px;" asp-controller="User" asp-action="Register" data-item='Register'>Register</a></li>
                <li><a href='/Home/Login' data-item='Login'>Login</a></li>
            </ul>
        </nav>
    </section>


    <form id="register-form" asp-controller="User" asp-action="Register" method="post">

        <label asp-for="FirstName">First name:</label><br>
        <input asp-for="FirstName" type="text" >
        <span asp-validation-for="FirstName"></span><br>

        <label asp-for="LastName">Last name:</label><br>
        <input asp-for="LastName" type="text">
        <span asp-validation-for="LastName"></span><br>

        <label asp-for="Username">Username:</label><br>
        <span asp-validation-for="Username"></span>
        <input asp-for="Username" type="text"><br>

        <label asp-for="Email">Email:</label><br>
        <span asp-validation-for="Email"></span>
        <input asp-for="Email" type="email"><br>

        <label asp-for="Password">Password:</label><br>
        <span asp-validation-for="Password"></span>
        <input asp-for="Password" type="text"><br>

        <label asp-for="PhoneNumber">Phonenumber:</label><br>
        <input asp-for="PhoneNumber" type="text"><br>


        <input asp-controller="User" asp-action="Register" method="post" type="submit" value="Register">
    </form>



    <footer>
        <small>© Copyright @DateTime.Now.Year, BlockieTalkie</small>
    </footer>

</body>
</html>