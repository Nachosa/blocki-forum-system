@model ForumSystemDTO.ViewModels.UserViewModels.RegisterUser

<div class="credentials-form">
	<div id="credentials-title">Welcome</div>
	<div id="register-subtitle">Let's create your account!</div>

	<form id="register-form" asp-controller="User" asp-action="Register" method="post">

		<div class="input-container">
			<input asp-for="FirstName" id="firstname" class="input" type="text" placeholder=" " />
			<span asp-validation-for="FirstName" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="FirstName" class="placeholder">First Name</label>
		</div>

		<div class="input-container">
			<input asp-for="LastName" id="lastname" class="input" type="text" placeholder=" " />
			<span asp-validation-for="LastName" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="LastName" class="placeholder">Last Name</label>
		</div>

		<div class="input-container">
			<input asp-for=Email id="email" class="input" type="text" placeholder=" " />
			<span asp-validation-for="Email" class="validation-error-message"></span><br>
			<div class="cut cut-short"></div>
			<label asp-for="Email" class="placeholder">Email</label>
		</div>

		<div class="input-container">
			<input asp-for="Username" id="username" class="input" type="text" placeholder=" " />
			<span asp-validation-for="Username" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="Username" class="placeholder">UserName</label>
		</div>

		<div class="input-container">
			<input asp-for="Password" id="password" class="input" type="text" placeholder=" " />
			<span asp-validation-for="LastName" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="Password" class="placeholder">Password</label>
		</div>

		<div class="input-container">
			<input asp-for=PhoneNumber id="phonenumber" class="input" type="text" placeholder=" " />
			<span asp-validation-for="Email" class="validation-error-message"></span><br>
			<div class="cut cut-short"></div>
			<label asp-for="PhoneNumber" class="placeholder">Phone</label>
		</div>

		<div class="validation-error-message">
			@if (this.ViewData["ErrorMessage"] is not null)
			{
				<p>@this.ViewData["ErrorMessage"]</p>
			}
		</div>

		@*<input asp-controller="User" asp-action="Register" class="button-normal" method="post" type="submit" value="Register">*@
		<button class="submit">
			<a asp-controller="User" asp-action="Register" method="post" type="submit" class="submit" value="Register">Register</a>
		</button>
	</form>
</div>