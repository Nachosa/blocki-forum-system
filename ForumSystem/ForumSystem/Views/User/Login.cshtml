@model ForumSystemDTO.ViewModels.UserViewModels.Login

<div class="credentials-form">
	<div id="credentials-title">Welcome</div>
	<div id="register-subtitle">Please enter your Username and password to login.</div>

	<form id="register-form" asp-controller="User" asp-action="Login" method="post">

		<div class="validation-error-message">
			@if (this.ViewData["ErrorMessage"] is not null)
			{
				<p>@this.ViewData["ErrorMessage"]</p>
			}
		</div>

		<div class="input-container">
			<input asp-for="Username" id="username" class="input" type="text" placeholder=" " />
			<span asp-validation-for="Username" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="Username" class="placeholder">UserName</label>
		</div>

		<div class="input-container">
			<input asp-for="Password" id="password" class="input" type="password" placeholder=" " />
			<span asp-validation-for="Password" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="Password" class="placeholder">Password</label>
		</div>

		<form asp-controller="User" asp-action="Login" method="post">
			<button type="submit" class="submit">Login</button>
		</form>
	</form>
</div>