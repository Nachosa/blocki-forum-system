@model ForumSystemDTO.ViewModels.UserViewModels.EditUser


<div class="basic-form">
	<div id="basic-form-title">Hello</div>
	<div id="basic-form-subtitle">Fill the values you want to be changed!</div>

	<form id="register-form" method="post" enctype="multipart/form-data" asp-controller="User" asp-action="EditUser">

		<div class="validation-error-message">
			@if (this.ViewData["ErrorMessage"] is not null)
			{
				<p>@this.ViewData["ErrorMessage"]</p>
			}
		</div>

		<div class="input-container">
			<input asp-for="FirstName" id="firstname" class="basic-form-input" type="text" placeholder=" " />
			<span asp-validation-for="FirstName" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="FirstName" class="placeholder">First Name</label>
		</div>


		<div class="input-container">
			<input asp-for="LastName" class="basic-form-input" type="text" placeholder=" " />
			<span asp-validation-for="LastName" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="LastName" class="placeholder">Last Name</label>
		</div>

		<div class="input-container">
			<input asp-for=Email class="basic-form-input" type="text" placeholder=" " />
			<span asp-validation-for="Email" class="validation-error-message"></span><br>
			<div class="cut cut-short"></div>
			<label asp-for="Email" class="placeholder">Email</label>
		</div>

		<div class="input-container">
			<input asp-for="Password" class="basic-form-input" type="password" placeholder=" " />
			<span asp-validation-for="Password" class="validation-error-message"></span><br>
			<div class="cut"></div>
			<label asp-for="Password" class="placeholder">Password</label>
		</div>

		<div class="input-container">
			<input asp-for="PhoneNumber" class="basic-form-input" type="text" placeholder=" " />
			<span asp-validation-for="PhoneNumber" class="validation-error-message"></span><br>
			<div class="cut cut-short"></div>
			<label asp-for="PhoneNumber" class="placeholder">Phone number</label>
		</div>
		<div>
			<input class="basic-form-submit" asp-for=ProfilePic accept="image/*" class="basic-form-input" />
			@*<label asp-for="ProfilePic" class="placeholder">Profile picture.</label>*@
		</div>
		@if (this.Model.ProfilePicPath is not null)
		{
			<p>Delete current profile picture?</p>
			<div id="user-search-dropdown">
				<div class="dropdown-select" tabindex="1">
					<input asp-for="DeleteProfilePicOption" class="dropdown-selectopt" id="opt1" value="No" type="radio" name="DeleteProfilePicOption" checked>
					<label for="opt1" class="dropdown-opt-label">No</label>

					<input asp-for="DeleteProfilePicOption" class="dropdown-selectopt" id="opt2" value="Yes" type="radio" name="DeleteProfilePicOption">
					<label for="opt2" class="dropdown-opt-label">Yes</label>

				</div>
			</div>
			<input type="hidden" asp-for="ProfilePicPath"/>
		}
		<br>
		
			<button type="submit" class="basic-form-submit">Save</button>
		
	</form>
</div>