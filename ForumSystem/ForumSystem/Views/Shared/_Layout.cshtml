@{
	bool isLogged = Context.Session.Keys.Contains("LoggedUser");
	string userName = Context.Session.GetString("LoggedUser");
}
<!DOCTYPE html>
<html lang="en">

<head>
	<link href="~/css/StyleSheet.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
	<meta charset="utf-8">
	<title>BlockieTalkie</title>
</head>

<body>
	<header>
		<nav>
			<ul class="menuItems">
				<li>
					<a href="/Home/Index">
						<div class="imageBox">
							<div>
								<img alt="/Home/Index" src="~/images/cubehome.png" class="cubeImage">
							</div>
							<div id="hoverImg">
								<img alt="/Home/Index" src="~/images/cubepink.png" class="cubeImage">
							</div>
						</div>
					</a>

					<a href="/swagger" data-item='API'>API</a>
					<a href="/Home/About" data-item='About'>About</a>
					@if (isLogged is false)
					{
					<a asp-controller="User" asp-action="Register" data-item='Register'>Register</a>
					<a asp-controller="User" asp-action="Login" data-item='Login'>Login</a>
					}
					else
					{
					<a asp-controller="User" asp-action="Logout" data-item='Logout'>Logout</a>
					<a asp-controller="User" asp-action="UserDetails" asp-route-id="@ViewData["userId"]" data-item='@userName'>@userName</a>
					}
				</li>
			</ul>
		</nav>
	</header>

	<main>
		@RenderBody()
	</main>

	<footer>
		<small>© Copyright @DateTime.Now.Year, BlockieTalkie</small>
	</footer>
</body>
</html>